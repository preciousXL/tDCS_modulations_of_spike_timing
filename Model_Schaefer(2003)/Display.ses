proc figBAP() {
  st.amp   = 1.9
  syn.imax =  0
  print "Somatic current injection is ", st.amp, " nA"
  print "Dendritic EPSP like current injection is ", syn.imax, " nA"
  print ""
  run()
}

proc figEPSP() {
  st.amp   = 0
